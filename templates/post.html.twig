                font-weight: 600;
                padding-top: 5px;
                padding-left: 5px;
            }

            textarea{
                display: block;
                width: 1370px;
                background-color: white;
                margin-bottom: 10px;
                padding: 15px;
                border-radius: 10px;
                font-size: 16px;
                height: 210px;
                border: 2px solid rgba(0, 0, 0, 0.6);
                font-family: 'Lato', sans-serif;
                color: black;
            }

            .dream-title{
                margin-top: 15px
            }

            .form-container input{
                display: block;
                width: 1370px;
                background-color: white;
                margin-bottom: 10px;
                padding: 15px;
                border-radius: 10px;
                font-size: 16px;
            }

            .dream-content{
                height: 200px;
            }

            .post-container button{
                padding: 2px;
                border-radius: 5px;
                font-family: 'Raleway', sans-serif;
                font-weight: 700;
                color: white;
                letter-spacing: 1px;
                font-size: 18px;
                border: none;
                font-weight: black;
            }

            .post-btn{
                background-color: #1D7B79;
                float: right;
                width: 100px;
            }

            .post-btn:hover{
                cursor: pointer;
                background-color: #1d7b79b9;
            }

            .cancel-btn{
                background-color: #C16464;
                float: left;
                margin-left: 84%;
                width: 110px;
            }

            .cancel-btn:hover{
                cursor: pointer;
                background-color: #c16464d7;
