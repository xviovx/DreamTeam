                border: 3px solid rgba(0, 0, 0, 0.6);
            }

            .post-container h2{
                font-family: 'Lato', sans-serif;
                color: black;
                font-size: 26px;
                font-weight: 600;
                padding-top: 10px;
                padding-left: 15px;
            }

            .post-container hr{
                width: 100%;
                height: 2px;
                margin: 0;
                margin-top: 5px;
                background-color: rgba(0, 0, 0, 0.6);
            }

            .form-container{
                width: 98%;
                height: 70%;
                /*background-color: red;*/
